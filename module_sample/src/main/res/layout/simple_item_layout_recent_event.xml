<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.capgemini.entity.RecentEvent">
        </variable>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp280"
        android:layout_height="wrap_content"
        android:background="#1D1D27">

        <View
            android:id="@+id/viewLine2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            android:background="#E6000000"
            android:layout_width="8dp">
        </View>

        <TextView
            android:id="@+id/eventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/white"
            android:fontFamily="@font/antennawgl_light"
            android:text="@{item.type}"
            android:textSize="@dimen/dp14"
            tools:text="WatchEvent" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/eventType"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp6"
            android:textColor="@color/white"
            android:fontFamily="@font/antennawgl_light"
            android:text="@{item.createdAt}"
            android:textSize="@dimen/dp14"
            tools:text="2021-03-06 02:59:22" />

        <TextView
            android:id="@+id/eventAtReposName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antennawgl_light"
            android:text="@{item.repo.name}"
            app:layout_constraintStart_toStartOf="@id/eventType"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp20"
            android:textSize="@dimen/dp14"
            android:textColor="@color/white"
            tools:text="instantpage/instant.page" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>